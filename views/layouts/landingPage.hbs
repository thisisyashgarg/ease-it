<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EaseIt</title>
    <link rel="stylesheet" href="../css/styles.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Montserrat"
    />
  </head>
  <body style="padding-bottom: 4rem;">

    <!-- Navbar -->
    <!-- Navbar -->
    <nav
      class="flex w-screen justify-center items-center text-center pt-10 bg-grey"
    >
      <!-- Flex Container -->
      <div
        class="inline-flex items-center justify-between space-x-9 bg-transparent py-4 px-20 rounded-2xl bg-black/10"
      >
        <!-- logo -->
        <img src="../img/openai-logo.svg" class="pt-px" alt="" />
        <!-- Links -->
        <a
          href="/homepage"
          class="font-extrabold text-transparent text-2xl bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"
        >
          EaseIt
        </a>
        {{! <a href="" class="text-white">Profile</a> }}
        {{! <a href="" class="text-white">Logout</a> }}

      </div>
    </nav>

    <section
      id="content"
      class="flex flex-col justify-center place-items-center"
    >
      <div class="mt-10 flex justify-center">
        <h1
          class="text-white text-[250px] font-bold text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"
        >Ease It</h1>
      </div>
      <div class="flex justify-center text-center">
        <h2 class="max-w-xl text-white text-2xl montserrat">EaseIt is an AI
          powered tool that can write personalised messages, debug code of any
          language, make songs in any artist style, make your workout plan and
          can do anything that you can think of.</h2>
      </div>

      <div
        class="flex justify-center text-center mt-10"
        style="margin-top: 3rem ;"
      >

        <a
          class="relative inline-flex items-center justify-center p-0.5 mb-2 mr-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white focus:ring-4 focus:outline-none focus:ring-purple-200"
          style="padding: 1.1rem;"
          href="/homepage"
        >
          <span
            class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-transparent rounded-md group-hover:bg-opacity-0"
          >
            <span style="font-size: 2rem;">Get Started</span>
          </span>
        </a>

      </div>

    </section>

  </body>
</html>