      <!-- Page Topic -->
      <section id="personalisedMessage">
        <div class="content justify-center text-center pt-10 mt-10">
          <h1
            class="font-extrabold text-transparent text-5xl bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"
          >
            Workout Plan
          </h1>
          <p class="text-xl text-white pt-6 max-w-sm mx-auto">
            Enter your maintenance caloric, body weight, frequency, intensity
            and get your workout plan
          </p>
        </div>
      </section>

      <section id="getAnswer">
        <!-- flex-row division -->
        <div class="flex flex-row mt-24 space-x-32 justify-center">
          <!-- form -->
          <div class="text-white" style="">

            <form method="post" action="/workoutplan" class="leading-10">
              <label for="bodyweight" class="block mb-2 text-white">Body Weight
                (in kg)</label>
              <input
                style="padding: 5px;"
                placeholder="e.g 82"
                type="text"
                name="bodyweight"
                required
                class="bg-transparent text-white rounded-lg w-96"
                style="border-color: 2px solid grey;"
                value="{{bodyweight}}"
              />

              <label
                for="calories"
                class="block mb-2 text-white pt-2"
              >Maintenance Calories (in kCal)</label>
              <input
                style="padding: 5px;"
                placeholder="e.g 2300"
                type="text"
                id="replyToMessage1"
                name="calories"
                required
                class="bg-transparent text-white rounded-lg w-96"
                value="{{calories}}"
              />

              <label
                for="frequency"
                class="block mb-2 text-white"
              >Frequency</label>
              <input
                style="padding: 5px;"
                placeholder="e.g 4 times a week"
                type="text"
                id="replyToMessage2"
                name="frequency"
                required
                class="bg-transparent text-white rounded-lg w-96"
                value="{{frequency}}"
              />

              <label
                for="intensity"
                class="block mb-2 text-white"
              >Intensity</label>
              <input
                style="padding: 5px;"
                placeholder="e.g Light / Moderate / Intense"
                type="text"
                id=""
                name="intensity"
                required
                class="bg-transparent text-white rounded-lg w-96"
                value="{{intensity}}"
              />

              <br />

              <button
                type="submit"
                class="bg-transparent text-white text-cyan-300 pl-16 pt-7 text-2xl"
              >Generate â†’</button>
            </form>

          </div>
          <div id="diet-chart">
            <label
              for=""
              style="font-size: 1.5rem; font-weight:large; color: white"
            >{{label}}</label><br />
            <textarea
              style="padding: 5px;"
              placeholder="Your workout plan will appear here"
              name=""
              cols="50"
              rows="15"
              class="bg-transparent text-white rounded-lg"
            >{{data}}</textarea>
            {{! <button id="download-as-pdf">Download as PDF</button> }}
          </div>

        </div>
      </section>
    </section>

    <script src="../../app.js"></script>
    <script defer src="../../public/js/promptCall.js"></script>

  </body>
</html>